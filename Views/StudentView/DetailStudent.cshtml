@model IEnumerable<DOAN_WEBNC.Models.CTDiemTungHSVM>
<style>
    td {
        padding: 12px 7px !important;
        vertical-align: middle !important;
        font-size: 12px;
    }
</style>

    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <td>
                    Môn
                </td>
                @foreach (var item in Model)
                {
                    <td>
                        @Html.DisplayFor(modelItem => item.TenMon)
                    </td>
                }
            </tr>
        </thead>
        <tr>
            <td>
                Điểm
            </td>
            @foreach (var item in Model)
            {
                <td>
                    @Html.DisplayFor(modelItem => item.DiemTong)
                </td>
            }
        </tr>
        <tr>
            <td></td>
            @foreach (var item in Model)
            {
                <td>
                    <a href="~/DiemChiTiet/Details/@item.MaBangDiem">Details</a>
                </td>
            }
        </tr>
    </table>


